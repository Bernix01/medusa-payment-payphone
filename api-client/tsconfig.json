{
  "compilerOptions": {
    "strict": true,
    /* Basic Options */
    "target": "ES2022",
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    "declaration": true,
    "module": "Node16",
    "removeComments": true,
    "skipLibCheck": true,
    "inlineSourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "lib": ["ES2023"]
  },
  "exclude": ["dist", "node_modules"],
  "filesGlob": ["./**/*.ts"]
}
